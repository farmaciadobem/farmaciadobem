<h1>Medicamentos</h1>
<br />
<%= search_form_for @q do |f| %>
    <%= f.label :"Medicamentos"  %>
    <%= f.search_field :nome_cont %>
    <button class="btn waves-effect waves-light" type="submit" name="action">
      <%= f.submit :"Buscar" %>
    </button>
<% end %>

<br/><br />


<table>
  <thead>
  <tr>
    <th>Codigo</th>
    <th>Medicamento</th>
    <th>validade</th>
    <th>Status</th>
    <th>Foto</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @medicamentos.each do |medicamento| %>
      <thead>
        <tr>
          <td><%=  link_to medicamento.id, medicamento_url(medicamento.id) %></td>
          <td><%=  link_to medicamento.nome, medicamento_url(medicamento.id) %></td>
          <td><%= medicamento.validade %></td>
          <td><%= medicamento.retorna_status %></td>
          <td><%= image_tag medicamento.avatar.url(:medium) %></td>
          <td><%= link_to 'Editar', edit_medicamento_path(medicamento) %></td>
          <!--<td><%= link_to 'Destroy', medicamento, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      </thead>
  <% end %>


  </tbody>
</table>

<br>

<%= link_to 'Novo Medicamento', new_medicamento_path %>
