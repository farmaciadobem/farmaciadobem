<h1>Doações</h1>
<br />
<table>
  <thead>
  <tr>
    <th>Codigo</th>
    <th>Data da Doação</th>
    <th>Data Coleta</th>
    <th>Local</th>
    <th>Usuario</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @doacoes.each do |doacao| %>
      <thead>
      <tr>
        <td><%= link_to doacao.id, doacao_url(doacao.id) %></td>
        <% if !doacao.data_criacao.blank? || !doacao.data_criacao.nil? %>
            <td><%= doacao.data_criacao.strftime("%d/%m/%Y") %></td>
        <% else %>
            <td>Erro ao recuperar data</td>
        <% end %>
        <td><%= doacao.data_doacao %></td>
        <td><%= doacao.local_doacao %></td>
        <% if !doacao.user.perfil.blank? || !doacao.user.perfil.nil? %>
          <td><%= link_to doacao.user.email, perfi_url(doacao.user.perfil.id) %></td>
        <% else %>
          <td><%= doacao.user.email %></td>
        <% end %>
      </tr>
      </thead>
  <% end %>


  </tbody>
</table>
