
<h1>Medicamentos</h1>

<ul>
  <%= notice %>

  <% @medicamentos.each do |medicamento| %>
      <div class="row">
        <div class="col s12 m7">
          <div class="card">
            <div class="card-image">
              <%= image_tag("medicamento.png",size: "300x300") %>
              <span class="card-title" style="color: red"> <%= medicamento.nome %></span>
            </div>
            <div class="card-content">
              <p>Tipo: <%= medicamento.tipo %></p>
              <p>Validade: <%= medicamento.validade %></p>
            </div>
            <div class="card-action">
              <%=  link_to 'Solicitar', medicamento_url(medicamento.id) %>
            </div>
          </div>
        </div>
      </div>
  <% end -%>

</ul>



