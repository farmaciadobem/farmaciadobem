
<h1>Medicamentos Dispon√≠veis</h1>

<ul>
  <%= notice %>

  <%= search_form_for @q do |f| %>
    <%= f.label :"Medicamentos"  %>
    <%= f.search_field :nome_cont %>
    <button class="btn waves-effect waves-light" type="submit" name="action">
      <%= f.submit :"Buscar" %>
    </button>
  <% end %>

  <br/><br />
  <% @medicamentos.each do |medicamento| %>
      <div class="row">
        <div class="col s12 m7">
          <div class="card">
            <div class="card-image">
              <%= image_tag("medicamento.png",size: "300x300") %>
              <span class="card-title" style="color: red"> <bold><%= medicamento.nome %></bold></span>
            </div>
            <div class="card-content">
              <p>Tipo: <%= medicamento.tipo %></p>
              <p>Validade: <%= medicamento.validade %></p>
            </div>
            <div class="card-action">
              <%=  link_to 'Solicitar', medicamento_url(medicamento.id) %>
            </div>
          </div>
        </div>
      </div>
  <% end -%>

</ul>



