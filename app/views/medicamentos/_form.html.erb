<%= form_for @medicamento, url: medicamento_path, html: { multipart: true }  do |f| %>
  <% if @medicamento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@medicamento.errors.count, "error") %> Para salver esse depoimento:</h2>

      <ul>
      <% @medicamento.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  <p>
      <%= f.label :"Nome Medicamento" %><br>
      <%= f.text_field :nome %>
    </p>
    <p>
      <%= f.label :"Tipo de Medicamento" %><br><br>
      <%= f.select(:tipo ,[["Comprimidos/Drágeas/Pílulas"],
                           ["Líquidos(solução e gotas)/Apenas fechados"],
                           ["Pomadas e Cremes(fechados)"],
                           ["Aerossol"],
                           ["Ampola"],
                           ["Meu medicamento está vencido. Quero descarta-lo."]],
                   {include_blank: 'Escolha'}, class:"browser-default") %>
    </p>
    <p>
      <%= f.label :"Status" %><br><br>
      <%= f.select(:active ,[["Desativo","0"],
                           ["Ativo","1"]],
                   {include_blank: 'Escolha'}, class:"browser-default") %>
    </p>
    <p>
      <%= f.label :Validade %><br>
      <%= f.text_field :validade, value: "mm/yyyy"%>
    </p>
    <p>
      <%= f.label :Foto %><br>
      <%= f.file_field :avatar%>
    </p>
  </div>
  <button class="btn waves-effect waves-light" type="submit" name="action">
    <%= f.submit :"Salvar"%>
  </button>

<% end %>
